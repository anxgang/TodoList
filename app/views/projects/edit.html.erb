<%= simple_form_for(@project) do |f| %>
<div class="input-group">
  <%= f.input :title, label: false, class: "form-control", placeholder: "Edit Project..." %>
  <span class="input-group-btn">
    <%= f.submit class: "btn btn-default", data: { disable_with: "submiting..." } %>
  </span>
</div>
<% end %>
